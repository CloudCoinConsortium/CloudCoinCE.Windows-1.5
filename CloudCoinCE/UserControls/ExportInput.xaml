<UserControl x:Class="CloudCoinCE.UserControls.ExportInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CloudCoinCE.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Foreground="#aba1fe" x:Name="lblName">1s</Label>
            <TextBox x:Name="txtCount" TextChanged="txtCount_TextChanged"  MaxLength="4" Text="0" TextAlignment="Left" FontSize="29" Padding="10,0,10,0" Foreground="#aba1fe"  BorderBrush="#3b3f84" BorderThickness="1" Background="#2e2e69" Style="{DynamicResource TextBoxStyle}"></TextBox>
        </StackPanel>
    </Grid>
</UserControl>
